# OpenAI Configuration
# Get your API key at: https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5.1
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# Optional: Tavily (for fact-checking web search)
# https://app.tavily.com/home
TAVILY_API_KEY=

# Database (SQLite)
DATABASE_URL=sqlite:///backend/data.db
QDRANT_PATH=:memory:
QDRANT_MIN_FILES=10
QDRANT_MIN_BYTES=100000

# Redis + LLM Cache
# Set REDIS_URL to your running Redis. Default is local 6379.
REDIS_URL=redis://localhost:6379/0
# LLM cache backend: memory | redis | redis_semantic | none
LLM_CACHE=memory
# TTL for Redis caches in seconds
LLM_CACHE_TTL=3600
# Semantic cache similarity threshold (smaller is stricter)
LLM_CACHE_DISTANCE_THRESHOLD=0.2
